<!-- CreateOrEditBook.cshtml -->
@using Model.DTOs.Book;
@model CreateOrEditBookDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Yeni Kitap Ekle</h3>
                </div>
                <div class="card-body">
                    <form id="createBookForm" asp-action="Create" asp-controller="Book" method="post" enctype="multipart/form-data">
                        <!-- Input alanları -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Kitap Adı</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Author" class="form-label">Yazar</label>
                            <input asp-for="Author" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Image" class="form-label">Kitap Resmi</label>
                            <input asp-for="Image" type="file" class="form-control" required />
                        </div>
                        <div class="text-center">
                            <button type="button" class="btn btn-primary" onclick="validateAndSubmit()">Kitabı Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function validateAndSubmit() {
            var form = document.getElementById('createBookForm');
            if (form.checkValidity()) {
                form.submit();
            } else {
                alert("Lütfen tüm alanları doldurun.");
            }
        }
    </script>
}
